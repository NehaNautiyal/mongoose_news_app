<div class="row">
    <div class="col-lg-12">
        <div id="saved"></div>
    </div>
</div>

<div class="modal fade" id="articleNote" tabindex="-1" role="dialog" aria-labelledby="articleNoteLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="articleNoteLabel">Write a Note</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <div id="articleName"></div>
          </div>
          <div class="form-group">
            <label for="articleNote" class="col-form-label">Note:</label>
            <textarea class="form-control" id="articleNote"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" id="saveNewNote" class="btn btn-primary">Save Note</button>
      </div>
    </div>
  </div>
</div>